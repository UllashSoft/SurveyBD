@model SurveyBD.Models.Project

@{
    ViewData["Title"] = "Edit Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Edit Survey Project</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Project Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <h4>Team Members</h4>
    <table class="table table-sm">
        <thead><tr><th>Name</th><th></th></tr></thead>
        <tbody id="teamBody">
            @foreach (var member in Model.Workers)
            {
                <tr>
                    <td><input type="text" name="WorkerNames" class="form-control" value="@member.Name" /></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-primary btn-sm mb-3" onclick="addTeamRow()">+ Add Member</button>

    <h4>Survey Data</h4>
    <table class="table table-sm">
        <thead><tr><th>Date</th><th>Bed Level</th><th>Bank Level</th><th>Water Level</th><th></th></tr></thead>
        <tbody id="dataBody">
            @foreach (var data in Model.Data)
            {
                <tr>
                    <td><input type="date" name="Dates" class="form-control" value="@data.Date.ToString("yyyy-MM-dd")" /></td>
                    <td><input type="number" step="0.01" name="RiverBedLevels" class="form-control" value="@data.RiverBedLevel" /></td>
                    <td><input type="number" step="0.01" name="RiverBankLevels" class="form-control" value="@data.RiverBankLevel" /></td>
                    <td><input type="number" step="0.01" name="WaterLevels" class="form-control" value="@data.WaterLevel" /></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-primary btn-sm mb-3" onclick="addDataRow()">+ Add Survey Data</button>

    <br />
    <button type="submit" class="btn btn-success">Update Project</button>
</form>

@section Scripts {
    <script>
        function addTeamRow() {
            document.getElementById('teamBody').insertAdjacentHTML('beforeend',
                `<tr><td><input type="text" name="WorkerNames" class="form-control" /></td><td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button></td></tr>`);
        }
        function addDataRow() {
            document.getElementById('dataBody').insertAdjacentHTML('beforeend',
                `<tr>
                    <td><input type="date" name="Dates" class="form-control" /></td>
                    <td><input type="number" step="0.01" name="RiverBedLevels" class="form-control" /></td>
                    <td><input type="number" step="0.01" name="RiverBankLevels" class="form-control" /></td>
                    <td><input type="number" step="0.01" name="WaterLevels" class="form-control" /></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button></td>
                </tr>`);
        }
        function removeRow(btn) {
            btn.closest('tr').remove();
        }
    </script>
}
