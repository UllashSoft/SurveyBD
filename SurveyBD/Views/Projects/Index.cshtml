@model List<SurveyBD.Models.Project>
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Survey Projects</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success" asp-action="Create">+ Add New Project</a>
</div>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Project Name</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@project.Id">View</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@project.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
